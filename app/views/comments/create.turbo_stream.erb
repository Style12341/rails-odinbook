<%= turbo_stream.prepend "post_#{@post.id}_comments" do %>
  <%= render partial: 'comments/comment', locals: { comment: @comment }%>
<% end %>
<turbo-stream action="replace" target=<%= "comment_form_#{@post.id}" %> >
  <template>
    <%= turbo_frame_tag "comment_form_#{@post.id}",data:{comment_handler_target:"frame"}, class: "comment-section-container" do %>
      <%= link_to 'Add a comment', new_post_comment_path(@post) %>
    <% end %>
  </template>
</turbo-stream>