<%= turbo_frame_tag "comment_form_#{@post.id}" do %>
  <h4>Add your comment:</h4>
  <%= form_with(model: [@post, @comment ]) do |form| %>
    <div class="field">
      <%= form.text_area :content %>
    </div>
    <div class="actions-comment">
      <%= form.submit "Comment", data:{action:"comment-handler#addComment"}%>
      <%= link_to 'Cancel', post_comment_section_path(@post),remote: true, data: { turbo_action: 'replace', turbo_frame: "comment_form_#{@post.id}" } %>
    </div>
  <% end %>
<% end %>
